<resources>
     Application theme.
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:listDivider">@mipmap/divider</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_color_active</item>
        <item name="colorAccent">#303F9F</item>
        <item name="colorControlNormal">#79787b</item>
    </style>

    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">#000</item>
    </style>

    <!--dialog头布局样式-->
    <style name="TitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/lide_logo_brown</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

</resources>
