<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fefefe">

        <RelativeLayout
            android:layout_marginTop="100dp"
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:src="@mipmap/quan"
                android:id="@+id/imageView"/>
            <TextView
                android:id="@+id/tv_read_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#777474"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="33"/>

        </RelativeLayout>

        <View
            android:layout_marginTop="-2dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:alpha="0.01"
            android:background="@drawable/down_dropshadow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/down_dropshadow"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/up_dropshadow"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/bg_color_base"
       >
        <Button
            android:id="@+id/bt_read_open_close"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:background="@null"
            android:textColor="@color/white"
            android:text="关闭读写器"/>
    </LinearLayout>



</LinearLayout>