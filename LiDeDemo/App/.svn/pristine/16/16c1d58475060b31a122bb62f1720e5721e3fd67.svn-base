package com.lide.app.adapter;

import android.content.Context;
import android.util.Log;
import android.view.View;
import android.view.ViewGroup;
import android.widget.TextView;
import android.widget.Toast;

import com.daimajia.swipe.SwipeLayout;
import com.lide.app.R;

import java.util.List;

/**
 * Created by lubin on 2016/7/15.
 */
public class DemoAdapter extends BaseListAdapter<String> implements BaseListAdapter.onInternalClickListener {
    public DemoAdapter(Context context, List<String> list) {
        super(context, list);
    }

    @Override
    public View bindView(int position, View convertView, ViewGroup parent) {
        if (convertView == null) {
            convertView = mInflater.inflate(R.layout.item_demo, parent, false);
        }
        final String item = getList().get(position);
        TextView text = ViewHolder.get(convertView, R.id.text_item_demo);
        TextView zan = ViewHolder.get(convertView, R.id.zan_demo);
        TextView delete = ViewHolder.get(convertView, R.id.delete_demo);
        SwipeLayout swipeLayout = ViewHolder.get(convertView, R.id.sample1);

        text.setText(item);
        setOnInViewClickListener(R.id.zan_demo, this);
        setOnInViewClickListener(R.id.delete_demo,this);
        swipeLayout.setShowMode(SwipeLayout.ShowMode.LayDown);

        swipeLayout.setDragEdge(SwipeLayout.DragEdge.Right);

        swipeLayout.addSwipeListener(new SwipeLayout.SwipeListener() {
            @Override
            public void onClose(SwipeLayout layout) {
                Log.d("Tag", "onClose");
            }

            @Override
            public void onUpdate(SwipeLayout layout, int leftOffset, int topOffset) {
                Log.d("Tag", "onUpdate");
            }

            @Override
            public void onStartOpen(SwipeLayout layout) {
                Log.d("Tag", "onStartOpen");
            }

            @Override
            public void onOpen(SwipeLayout layout) {
                //when the BottomView totally show.
                Log.d("Tag", "onOpen");
            }

            @Override
            public void onStartClose(SwipeLayout layout) {
                Log.d("Tag", "onStartClose");
            }

            @Override
            public void onHandRelease(SwipeLayout layout, float xvel, float yvel) {
                //when user's hand released.
                Log.d("Tag", "onHandRelease");
            }
        });
        return convertView;
    }

    @Override
    public void OnClickListener(View parentV, View v, Integer position, Object values) {
        switch (v.getId()){
            case R.id.zan_demo:
                Toast.makeText(mContext,"èµž",Toast.LENGTH_SHORT).show();
                break;
            case R.id.delete_demo:
                remove(position);
                break;
        }
    }
}
