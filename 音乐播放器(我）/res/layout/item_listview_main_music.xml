<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >

    <com.example.music.myview.CircleImageView
        android:id="@+id/iv_item_listview_main"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00000000"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/tv_item_listView_main_musicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="平凡之路"
                android:textSize="20sp" />

            <TextView 
                android:id="@+id/tv_item_listView_main_singer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="right"
                android:paddingRight="30dp"
                android:text="朴树"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_listView_main_author"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="词：朴树" />

            <TextView
                android:id="@+id/tv_item_listView_main_composer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="曲：朴树" />

            <TextView
                android:id="@+id/tv_item_listView_main_durationtime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="5:07" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>