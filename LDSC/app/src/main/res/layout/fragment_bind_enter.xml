<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bind_one_to_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_stock_sku_btn"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="一对一绑定"
            android:textColor="@drawable/selector_color_text"
            android:textSize="@dimen/font_big"/>

        <Button
            android:id="@+id/bind_one_to_many"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_stock_product_btn"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="一对多绑定"
            android:textColor="@drawable/selector_color_text"
            android:textSize="@dimen/font_big"/>


    </LinearLayout>
</LinearLayout>