        String apiMethod = "api/skuTag/list";
        String postUrl = Utils.apiUrl + apiMethod;

        requestForEpcList requestForEpcList = new requestForEpcList();
        requestForEpcList.orderByField = "barcode";
        requestForEpcList.orderByMethod = "ASC";
