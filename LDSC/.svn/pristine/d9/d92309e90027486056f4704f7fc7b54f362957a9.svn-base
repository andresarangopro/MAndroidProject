<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/table_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/particulars_id"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="#"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/particulars_sku"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:text="条   码"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_small"  />

        <TextView
            android:id="@+id/particulars_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:text="商品名称"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_small"  />

        <TextView
            android:id="@+id/particulars_order_num"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:padding="5dp"
            android:text="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/particulars_operation_num"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:padding="5dp"
            android:text="0"
            android:textColor="@color/goods_delivery_title_bg"
            android:textSize="@dimen/text_size_small" />

    </TableRow>
    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shadow"/>
</LinearLayout>

