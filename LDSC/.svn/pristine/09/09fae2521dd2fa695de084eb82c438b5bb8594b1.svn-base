<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/find_bound_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_find_by_barcode_btn"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="按条码找货"
            android:textColor="@drawable/selector_color_text"
            android:textSize="@dimen/font_big"/>

        <TextView
            android:id="@+id/find_bound_epc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_find_by_unq_btn"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="按唯一码找货"
            android:textColor="@drawable/selector_color_text"
            android:textSize="@dimen/font_big"/>

    </LinearLayout>
</LinearLayout>