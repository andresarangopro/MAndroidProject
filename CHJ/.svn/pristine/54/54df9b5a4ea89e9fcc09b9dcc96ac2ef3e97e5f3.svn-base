<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_inventory_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="盘点柜位 : "
            android:textColor="@color/line_text_color"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/et_gwbh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/edit_common"
            android:hint="柜位编号"
            android:padding="5dp"
            android:textColor="@color/line_text_color"
            android:textColorHint="@color/line_text_color"
            android:textSize="22sp" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_line_active"
        android:text="下一步"
        android:textColor="@color/line_text_color"
        android:textSize="16sp" />


</LinearLayout>