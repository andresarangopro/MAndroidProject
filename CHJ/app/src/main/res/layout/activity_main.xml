<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_view_main"
        layout="@layout/common_title" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/light_color"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="序列号：" />

        <TextView
            android:id="@+id/equipId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <Button
            android:id="@+id/btn_store"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_line_active"
            android:text="货品存放管理"
            android:textColor="@drawable/button_line_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_take"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_line_active"
            android:text="拣货管理"
            android:textColor="@drawable/button_line_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_adjust"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_line_active"
            android:text="货品移柜管理"
            android:textColor="@drawable/button_line_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_stockTake"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_line_active"
            android:text="盘点管理"
            android:textColor="@drawable/button_line_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_line_active"
            android:text="搜索"
            android:textColor="@drawable/button_line_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_line_active"
            android:text="设置"
            android:textColor="@drawable/button_line_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_out"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_line_active"
            android:text="注销"
            android:textColor="@drawable/button_line_text"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>


