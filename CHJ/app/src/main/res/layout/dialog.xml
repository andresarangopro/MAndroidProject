<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/white"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog"
            style="@style/TitleStyle"
            android:background="@drawable/text_view"
            android:text="" />
        <!-- android:hint=""提示用户输入内容 -->
        <EditText
            android:id="@+id/et_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:digits="0123456789abcdefghigklmnopqrstuvwxy
		zABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint=""
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_submit_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_line"
                android:text="确认"
                android:textColor="@drawable/button_line_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_cancel_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_line"
                android:text="取消"
                android:textColor="@drawable/button_line_text"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>