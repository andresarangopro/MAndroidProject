<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
	
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mainActivity_fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_above="@+id/rg_mainActivity_btnContainer"        
        />

    <RadioGroup
        android:id="@+id/rg_mainActivity_btnContainer"
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_bg"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RadioButton 
            android:id="@+id/rb_main_calllog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/calllog_radio_btn"
            android:paddingTop="15dp"
            />
        <RadioButton 
            android:id="@+id/rb_main_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/contact_radio_btn"
            android:paddingTop="15dp"
            />
        <RadioButton 
            android:id="@+id/rb_main_sms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sms_radio_btn"
            android:paddingTop="15dp"
            android:checked="true"
            />
        <RadioButton 
            android:id="@+id/rb_main_dial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/dialpad_radio_btn"
            android:paddingTop="15dp"
            />
    </RadioGroup>

</RelativeLayout>
