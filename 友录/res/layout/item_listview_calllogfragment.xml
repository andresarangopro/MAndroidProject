<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_photo_calllogframent_list_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/ic_contact" />
    
    <ImageView
        android:id="@+id/iv_point_calllogframent_list_item"
        android:layout_width="10dp"
        android:layout_height="10dp"
       	android:layout_marginTop="40dp"
       	android:layout_marginLeft="-20dp"
       	
        android:src="@drawable/ic_warning" />
    
    

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_name_calllogframent_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="果郡王"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/is_callout"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="3dp"
                android:visibility="invisible"
                android:src="@drawable/ic_calllog" />

            <TextView
                android:id="@+id/tv_number_calllogframent_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13268223344"
                android:textColor="#ffaaaaaa"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_address_calllogframent_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="京城"
                android:textColor="#ffaaaaaa"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_calllogframent_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:30"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffaaaaaa"
        android:textSize="14sp" />

</LinearLayout>