<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/left_item_listview_chat">
    <TextView 
        android:id="@+id/tv_time_listview_chat"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="2014-4-29 13:12"
        android:textColor="#ffaaaaaa"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <ImageView 
	        android:id="@+id/iv_head_listview_chat"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:src="@drawable/ic_contact"
	        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_content_listview_chat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/chat_left_bg"
	        android:layout_marginRight="15dp"/>
	</LinearLayout>
	
	
</LinearLayout>
