<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/right_item_listview_chat">
    <TextView 
        android:id="@+id/tv_time_listview_chat"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="2014-4-29 13:12"
        android:textColor="#ffaaaaaa"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/tv_content_listview_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head_listview_chat"
            android:layout_toLeftOf="@+id/iv_head_listview_chat"
            android:background="@drawable/chat_right_bg" />

        <ImageView
            android:id="@+id/iv_head_listview_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_contact" />
    </RelativeLayout>
	
</LinearLayout>
